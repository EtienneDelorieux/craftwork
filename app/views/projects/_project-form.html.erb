<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
  </div>

  <div class="form-inputs">
    <%= f.input :content %>
  </div>

  <div class="form-inputs">
    <%= f.association :category, include_blank: false, collection: Category.order(:name) %>
  </div>

  <div class="form-inputs">
    <%= f.input :city %>
  </div>

  <div class="form-actions">
    <%= f.submit "Submit", class: "btn btn--primary" %>
  </div>
<% end %>
