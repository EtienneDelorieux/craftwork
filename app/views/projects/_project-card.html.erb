<%= link_to(project_path(project), class: "project__card") do %>
  <div class="project__card__body" style="background-image: url(<%= project_image_path_for(project) %>)">
    <div class="project__card__content">
      <h2 class="project__card__title"><%= project.title %></h2>
      <span class="project__card__user">
        <%= image_tag "http://kitt.lewagon.com/placeholder/users/alexandrebk", class: "avatar", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <%= "#{project.user.firstname.capitalize} #{project.user.lastname}" %>
      </span>
    </div>
    <span class="project__card__filter"></span>
  </div>
  <div class="project__card__footer">
    <p class="project__card__category"><%= icon('fas', 'tag') %><%= project.category.name %></p>
    <p class="project__card__city"><%= icon('fas', 'map-marker-alt') %><%= project.city %></p>
  </div>
<% end %>
