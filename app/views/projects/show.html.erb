<h1><%= @project.title%></h1>
<p><%= @project.content %></p>
<p><%= @project.city %></p>
<p><%= @project.user.firstname %></p>


<%= link_to 'Apply', new_project_application_path(@project) %>



<% @applications.each do |application| %>
  <div class="card">
    <h2>
      Name: <%= application.user.firstname %> <%= application.user.lastname %>
    </h2>
    <p>
      Quote: $ <%= application.quote %>
    </p>
    <p>
      Start Date: <%= application.start_date %>
    </p>
    <p>
      Description: <%= application.comment %>
    </p>
    <p>
      Duration: <%= application.estimated_duration %>
    </p>
    <p>
      Selected?: <%= application.selected? %>
    </p>
    <% unless application.selected %>
    <%= link_to 'Select this application', select_application_path(application,@project) %>
    <% end %>
  </div>
<% end %>


