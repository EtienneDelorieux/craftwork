<h1>View all our projects</h1>
<p>Find me in app/views/projects/index.html.erb</p>

<% @projects.each do |project| %>
    <%= link_to(project_path(project)) do %>
      <div class="card">
        <h2><%= project.title %></h2>
        <p>
          <%= link_to "Edit this project", edit_project_path(project.id) %> |
          <%= link_to "Delete this project", project_path(project.id), method: :delete, data: { confirm: "Are you sure?" } %>
        </p>
      </div>
    <% end %>
<% end %>
