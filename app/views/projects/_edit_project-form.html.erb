<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, placeholder: "Give the most explicit possible title" %>
  </div>

  <div class="form-inputs">
    <%= f.input :content, placeholder: "Describe as best as you can your project so workers can send you a precise contract" %>
  </div>

  <div class="form-inputs">
    <%= f.association :category, include_blank: false, collection: Category.order(:name) %>
  </div>

  <div class="form-inputs">
    <%= f.input :city, placeholder: "Paris" %>
  </div>

  <div class="form-inputs">
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.submit "Edit project", class: "btn btn--primary" %>
    <%= link_to "Cancel", project_path(@project), class: "btn btn--secondary" %>
  </div>
<% end %>
